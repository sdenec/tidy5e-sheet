<div class="favorites">
  {{#if favItems}}
    <ol class="inventory-list fav-item">
      <li class="item inventory-header flexrow">
        <h3>Items</h3>
        <div class="item-detail item-uses" title="Item Uses/Charges"><i class="fas fa-bolt"></i></div>
        <div class="item-detail item-action" title="Item Usage"><i class="fas fa-hourglass"></i></div>
      </li>
      {{#each favItems as |item id|}}
       {{> "modules/tidy5e-sheet/templates/favorites/item.hbs" item=item}}
      {{/each}}
    </ol>
  {{/if}}
  {{#if favFeats}}
    <ol class="inventory-list fav-feat">
      <li class="item inventory-header flexrow">
        <h3>Features</h3>
        <div class="item-detail item-uses" title="Feat Uses/Charges"><i class="fas fa-bolt"></i></div>
        <div class="item-detail item-action" title="Feat Usage"><i class="fas fa-hourglass"></i>
      </li>
      {{#each favFeats as |feat lvl|}}
      {{> "modules/tidy5e-sheet/templates/favorites/item.hbs" item=feat}}
      {{/each}}
    </ol>
  {{/if}}

  {{#if favSpellsPrepMode}}
    {{#each favSpellsPrepMode as |section lvl|}}
      <ol class="inventory-list fav-spell">
        {{#if section.spells}}
          {{#if lvl}}
            <li class="item inventory-header flexrow">                        
              <h3>
              {{#if section.isAlways}}Always Prepared
              {{else if section.isAtWill}}At Will
              {{else if section.isInnate}}Innate Spellcasting
              {{else if section.isPact}}Pact Magic
              {{/if}}
              </h3>
              {{#if section.isPact}}
                <span class="spell-slots">
                  <input type="text" ${inputStyle} data-target="data.spells.spell{{lvl}}.value" value="{{section.value}}" placeholder="0"/>
                  /
                  <input class="spell-max" type="text" ${inputStyle} data-target="data.spells.spell{{lvl}}.max" value="{{section.max}}" placeholder="0"/>
                </span>
                {{else}}
                <!-- <span class="spell-slots">
                  &ndash; / &ndash;
                </span> -->
              {{/if}}
              <div class="item-detail item-action" title="Sell Usage"><i class="fas fa-hourglass"></i>
            </li>
          {{/if}}
          {{#each section.spells as |spell id|}}
            {{> "modules/tidy5e-sheet/templates/favorites/item.hbs" item=spell}}
          {{/each}}
        {{/if}}
      </ol>
    {{/each}}
  {{/if}}
  {{#if favSpells}}
    {{#each favSpells as |section lvl|}}
      <ol class="inventory-list fav-spell">
        {{#if section.spells}}
          {{#if lvl}}
            <li class="item inventory-header flexrow">                        
              <h3>
              {{#if section.isCantrip}}Cantrips
              {{else if section.isAlways}}Always Prepared
              {{else if section.isAtWill}}At Will
              {{else if section.isInnate}}Innate Spellcasting
              {{else if section.isPact}}Pact Magic
              {{else}}Spell Level {{lvl}}{{/if}}
              </h3>
              {{#if section.isCantrip}}
                <!-- <span class="spell-slots">∞/∞</span> -->
                {{else}}
                <span class="spell-slots">
                  <input type="text" ${inputStyle} data-target="data.spells.spell{{lvl}}.value" value="{{section.value}}" placeholder="0"/>
                  /
                  <input class="spell-max" type="text" ${inputStyle} data-target="data.spells.spell{{lvl}}.max" value="{{section.max}}" placeholder="0"/>
                </span>
              {{/if}}
              <div class="item-detail item-action" title="Spell Usage"><i class="fas fa-hourglass"></i>
            </li>
          {{/if}}
          {{#each section.spells as |spell id|}}
            {{> "modules/tidy5e-sheet/templates/favorites/item.hbs" item=spell}}
          {{/each}}
        {{/if}}
      </ol>
    {{/each}}
  {{/if}}
</div>